<h1>Listing cars  (<%= @cars.count %>)</h1>

<table>
  <tr>
    <th>Name</th>


    <th>fuel</th>
    <th>distance</th>
    <th>Engine type</th>
    <th>Exterior</th>
    <th>Interior</th>
    <th>Vin</th>
    <th>lan</th>
    <th>lng</th>
    <th>address</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cars.each do |car| %>
  <tr>
    <td><%= car.name %></td>
    <td><%= car.fuel %></td>
    <td><%= car.distance_to(@point) %></td>
    <td><%= car.engine_type %></td>
    <td><%= car.exterior %></td>
    <td><%= car.interior %></td>
    <td><%= car.vin %></td>
    <td><%= car.latitude %></td>
    <td><%= car.longitude %></td>
    <td><%= car.location.address %></td>
    <td><%= link_to 'Show', car %></td>
    <td><%= link_to 'Edit', edit_car_path(car) %></td>
    <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>

  </tr>
<% end %>
</table>

